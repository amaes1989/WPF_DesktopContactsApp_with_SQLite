<Application x:Class="DesktopContactsApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopContactsApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="fontLabel" TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style x:Key="fontTextbox" TargetType="TextBox">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style x:Key="fontButton" TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="DarkGreen"/>
            <Setter Property="Foreground" Value="AntiqueWhite"/>
        </Style>
        <Style x:Key="warningButton" TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="red"/>
            <Setter Property="Foreground" Value="AntiqueWhite"/>
        </Style>
    </Application.Resources>
</Application>
